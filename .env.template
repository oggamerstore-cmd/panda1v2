# =============================================================================
# PANDA.1 v0.2.9 Configuration
# =============================================================================
# Copy this file to ~/.panda1/.env and edit as needed
# All settings can be overridden with PANDA_ prefix environment variables
# =============================================================================

# =============================================================================
# OLLAMA / LLM CONFIGURATION
# =============================================================================
PANDA_OLLAMA_HOST=http://localhost:11434
PANDA_LLM_MODEL=panda1:latest
PANDA_LLM_FALLBACK_MODEL=qwen2.5:7b-instruct-q4_K_M
PANDA_LLM_TEMPERATURE=0.7
PANDA_LLM_MAX_TOKENS=2048

# =============================================================================
# OPENAI CLOUD LLM (Optional - for research/fallback)
# =============================================================================
# PANDA_OPENAI_API_KEY=sk-your-api-key-here
PANDA_OPENAI_MODEL=gpt-4o
PANDA_CLOUD_LLM_ENABLED=true
PANDA_OPENAI_WEB_SEARCH=true
PANDA_OPENAI_FALLBACK_ENABLED=false
PANDA_OPENAI_CONFIDENCE_THRESHOLD=0.75

# =============================================================================
# SCOTT NEWS AGENT
# =============================================================================
PANDA_SCOTT_ENABLED=true
PANDA_SCOTT_BASE_URL=http://192.168.1.18:8000
# PANDA_SCOTT_API_KEY=your-scott-api-key
PANDA_SCOTT_TIMEOUT=8

# =============================================================================
# PENNY FINANCE AGENT
# =============================================================================
PANDA_PENNY_ENABLED=true
PANDA_PENNY_API_URL=http://localhost:8003/api
PANDA_PENNY_TIMEOUT=20

# =============================================================================
# SENSEI LEARNING HUB
# =============================================================================
PANDA_SENSEI_ENABLED=true
PANDA_SENSEI_API_URL=http://192.168.1.19:8002
PANDA_SENSEI_TIMEOUT=30

# =============================================================================
# VOICE CONFIGURATION
# =============================================================================
PANDA_VOICE_ENABLED=true
PANDA_LANGUAGE_MODE=auto

# Speech-to-Text (Faster-Whisper)
PANDA_STT_ENGINE=faster-whisper
PANDA_STT_MODEL=small
PANDA_STT_COMPUTE_TYPE=int8
PANDA_STT_DEVICE=auto

# Text-to-Speech
PANDA_TTS_ENGINE=kokoro
PANDA_TTS_VOICE_EN=en-US-EricNeural
PANDA_TTS_VOICE_KO=km_omega
PANDA_TTS_SPEED=1.0
PANDA_TTS_MUTED=false
PANDA_TTS_DEVICE=cuda

# Push-to-Talk
PANDA_PTT_ENABLED=true
PANDA_PTT_MIN_DURATION=0.3
PANDA_PTT_MAX_DURATION=30.0

# Audio Devices (leave blank for system default)
# PANDA_AUDIO_INPUT_DEVICE=
# PANDA_AUDIO_OUTPUT_DEVICE=

# =============================================================================
# WEB GUI SERVER
# =============================================================================
PANDA_GUI_HOST=0.0.0.0
PANDA_GUI_PORT=7860
PANDA_GUI_AUTOSTART=true
PANDA_GUI_KIOSK_MODE=false
PANDA_GUI_VOICE_ENABLED=true

# HTTPS (required for microphone on non-localhost)
PANDA_ENABLE_HTTPS=true
PANDA_HTTPS_PORT=7861

# =============================================================================
# MEMORY & INTENT DETECTION
# =============================================================================
PANDA_ENABLE_MEMORY=true
PANDA_ENABLE_INTENT_DETECTION=true
PANDA_INTENT_CONFIDENCE_THRESHOLD=0.65

# =============================================================================
# ECHO CONTEXT HUB (Database PC)
# =============================================================================
PANDA_ECHO_ENABLED=true
PANDA_ECHO_BASE_URL=http://192.168.1.20:9010
# PANDA_ECHO_API_KEY=your-echo-api-key
PANDA_ECHO_TIMEOUT=8
PANDA_ECHO_TOP_K=5
